<%= form_with(model: exam, local: true) do |form| %>
  <% if exam.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(exam.errors.count, "error") %> prohibited this exam from being saved:</h2>

      <ul>
        <% exam.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="mb-3">
      <%= form.label :result %>
      <%= form.text_field :result, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :date %>
      <%= form.text_field :date, value: exam.date_for_select, class: "form-control", type: :date %>
    </div>

    <%= form.fields_for :patient do |p| %>
      <%= exam.patient.id %>
      <div class="mb-3">
        <%= form.label :patient %>
        <%= p.select :id, options_for_select(@patients, exam.try(:patient).try(:id)), { include_blank: 'Selecione' }, { class: "form-select" } %>
      </div>
    <% end %>

    <%= form.fields_for :exam_type do |p| %>
      <div class="form-group">
        <%= form.label :id %>
        <%= p.select :id, options_for_select(@exam_types, @exam.exam_type.try(:id)), { include_blank: 'Selecione' }, { class: "form-select" } %>
      </div>
    <% end %>

    <% if (false) %>
      <%= form.fields_for :patient do |c| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= c.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= c.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :cpf %>
          <%= c.text_field :cpf, class: "form-control" %>
        </div>
      <% end %>

      <%= form.fields_for :exam_type do |c| %>
        <div class="form-group">
          <%= form.label :id %>
          <%= c.text_field :id, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :name %>
          <%= c.text_field :name, class: "form-control" %>
        </div>
      <% end %>
    <% end %>
    <br>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>